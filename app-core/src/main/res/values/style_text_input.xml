<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Xsolla.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginTop">@dimen/input_top_margin</item>
        <item name="android:layout_marginBottom">@dimen/input_bottom_margin</item>
        <item name="boxCornerRadiusTopStart">@dimen/input_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/input_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/input_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/input_corner_radius</item>
        <item name="android:textColorHint">?attr/colorOnSurface</item>
        <item name="boxStrokeColor">@color/input_outline_color</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Xsolla.TextInputLayout</item>
    </style>

    <style name="ThemeOverlay.Xsolla.TextInputLayout" parent="">
        <item name="android:height">@dimen/text_input_height</item>
        <item name="colorPrimary">@color/magenta_color</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="android:textCursorDrawable">@drawable/input_cursor</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Xsolla.Input.Hint</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Xsolla.Input.Text</item>
        <item name="maxLines">1</item>
    </style>

    <style name="Widget.Xsolla.TextInputLayoutFilled" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxBackgroundColor">@color/filledbox_background_color</item>
        <item name="boxStrokeColor">@color/filledbox_stroke_color</item>
        <item name="hintTextColor">@color/on_surface_disabled_color</item>
        <item name="placeholderTextColor">@color/on_surface_medium_color</item>
        <item name="android:textColorHint">@color/on_surface_disabled_color</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="materialThemeOverlay">@style/TextInputLayoutFilled</item>
    </style>

    <style name="TextInputLayoutFilled">
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense</item>
        <item name="maxLines">1</item>
        <item name="android:textCursorDrawable">@drawable/input_cursor</item>
        <item name="android:textColor">@color/filledbox_text_color</item>
    </style>

    <style name="Widget.Xsolla.TextInputLayoutDropdownFilled" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/filledbox_background_color</item>
        <item name="boxStrokeColor">@color/filledbox_stroke_color</item>
        <item name="hintTextColor">@color/on_surface_disabled_color</item>
        <item name="android:textColorHint">@color/on_surface_disabled_color</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="endIconTint">@color/on_surface_medium_color</item>
    </style>

    <style name="TextAppearance.Xsolla.Input.Hint" parent="">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/input_text_hint_size</item>
    </style>

    <style name="TextAppearance.Xsolla.Input.Text" parent="">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/input_text_size</item>
    </style>

</resources>