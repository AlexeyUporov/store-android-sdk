<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_bg_color"
    android:padding="8dp">

    <ImageView
        android:id="@+id/xsolla_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_xsolla_logo" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/roboto"
        android:text="Or  username"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/baidu_pane" />

    <Button
        android:id="@+id/login_button"
        style="@style/XButton"
        android:layout_width="@dimen/old_input_width"
        android:layout_height="@dimen/old_input_height"
        android:layout_marginTop="24dp"
        android:text="Login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forgot_password_button" />


    <TextView
        android:id="@+id/forgot_password_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:fontFamily="@font/roboto"
        android:text="Forgot password?"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/password_input"
        app:layout_constraintTop_toBottomOf="@+id/password_input" />

    <ImageView
        android:id="@+id/google_pane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/facebook_pane"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@drawable/circle_shadow" />

    <ImageView
        android:id="@+id/facebook_pane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/google_pane"
        app:layout_constraintEnd_toStartOf="@+id/baidu_pane"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/google_pane"
        app:srcCompat="@drawable/circle_shadow" />

    <ImageView
        android:id="@+id/baidu_pane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/facebook_pane"
        app:layout_constraintEnd_toStartOf="@+id/linkedin_pane"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/facebook_pane"
        app:srcCompat="@drawable/circle_shadow" />

    <ImageView
        android:id="@+id/linkedin_pane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/baidu_pane"
        app:layout_constraintEnd_toStartOf="@+id/naver_pane"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/baidu_pane"
        app:srcCompat="@drawable/circle_shadow" />

    <ImageView
        android:id="@+id/naver_pane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/linkedin_pane"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/linkedin_pane"
        app:srcCompat="@drawable/circle_shadow" />

    <ImageView
        android:id="@+id/googleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@+id/google_pane"
        app:layout_constraintEnd_toEndOf="@+id/google_pane"
        app:layout_constraintStart_toStartOf="@+id/google_pane"
        app:layout_constraintTop_toTopOf="@+id/google_pane"
        app:srcCompat="@drawable/ic_google" />

    <ImageView
        android:id="@+id/facebookButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@+id/facebook_pane"
        app:layout_constraintEnd_toEndOf="@+id/facebook_pane"
        app:layout_constraintStart_toStartOf="@+id/facebook_pane"
        app:layout_constraintTop_toTopOf="@+id/facebook_pane"
        app:srcCompat="@drawable/ic_facebook" />

    <ImageView
        android:id="@+id/baidu_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@+id/baidu_pane"
        app:layout_constraintEnd_toEndOf="@+id/baidu_pane"
        app:layout_constraintStart_toStartOf="@+id/baidu_pane"
        app:layout_constraintTop_toTopOf="@+id/baidu_pane"
        app:srcCompat="@drawable/ic_baidu" />

    <ImageView
        android:id="@+id/linkedinButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@+id/linkedin_pane"
        app:layout_constraintEnd_toEndOf="@+id/linkedin_pane"
        app:layout_constraintStart_toStartOf="@+id/linkedin_pane"
        app:layout_constraintTop_toTopOf="@+id/linkedin_pane"
        app:srcCompat="@drawable/ic_linkedin" />

    <ImageView
        android:id="@+id/naverButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@+id/naver_pane"
        app:layout_constraintEnd_toEndOf="@+id/naver_pane"
        app:layout_constraintStart_toStartOf="@+id/naver_pane"
        app:layout_constraintTop_toTopOf="@+id/naver_pane"
        app:srcCompat="@drawable/ic_naver" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto"
        android:text="Login to your account to access"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xsolla_logo" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Sample App"
        android:textColor="#D81B60"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto"
        android:text="Continue with"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/username_input"
        android:layout_width="@dimen/old_input_width"
        android:layout_height="@dimen/old_input_height"
        android:layout_marginTop="16dp"
        android:background="@drawable/input_rounded_bg"
        android:gravity="center"
        android:hint="Username"
        android:nextFocusForward="@id/password_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/password_input"
        android:layout_width="@dimen/old_input_width"
        android:layout_height="@dimen/old_input_height"
        android:layout_marginTop="8dp"
        android:background="@drawable/input_rounded_bg"
        android:gravity="center"
        android:hint="Password"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username_input" />

    <TextView
        android:id="@+id/register_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:fontFamily="@font/roboto_medium"
        android:text="Sign Up"
        android:textColor="#F52E5A"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/forgot_password_button"
        app:layout_constraintStart_toStartOf="@+id/password_input" />


</androidx.constraintlayout.widget.ConstraintLayout>