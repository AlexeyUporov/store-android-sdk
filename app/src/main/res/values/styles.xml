<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textInputStyle">@style/Widget.Xsolla.TextInputLayout</item>
    </style>

    <style name="Widget.Xsolla.TabLayout" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/brutal_type</item>
        <item name="android:layout_marginBottom">@dimen/tabs_bottom_margin</item>
        <item name="android:background">@color/main_bg_color</item>
        <item name="tabIndicatorColor">@color/magneta_color</item>
        <item name="tabSelectedTextColor">@color/magneta_color</item>
        <item name="tabTextColor">@color/secondary_color</item>
    </style>

    <style name="XButton">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large.Inverse</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:font" tools:targetApi="o">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:elevation" tools:targetApi="lollipop">4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">false</item>
        <item name="android:background">@drawable/x_button_background</item>
    </style>

</resources>
