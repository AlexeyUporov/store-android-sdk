<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textInputStyle">@style/Widget.Xsolla.TextInputLayout</item>

        <!-- AlertDialog -->
        <item name="alertDialogTheme">@style/ThemeOverlay.MaterialComponents.Dialog.Alert.Xsolla</item>
        <item name="textColorAlertDialogListItem">@color/secondary_color</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogPositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogNegativeButton</item>

    </style>

    <style name="DatePicker" parent="AppTheme">
        <item name="colorAccent">@color/magenta_color</item>                  <!--header background-->
        <item name="android:background">@color/main_bg_color</item>     <!--calendar background-->
        <item name="android:colorControlActivated">@color/colorAccent</item>  <!--selected day-->
        <item name="android:textColorPrimary">@android:color/white</item>     <!--days of the month-->
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogPositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogNegativeButton</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
