<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/magenta_color</item>
        <item name="colorPrimaryVariant">@color/dark_magenta_color</item>
        <item name="colorOnPrimary">@color/black_color</item>
        <item name="colorSecondary">@color/magenta_color</item>
        <item name="colorSecondaryVariant">@color/dark_magenta_color</item>
        <item name="colorOnSecondary">@color/black_color</item>
        <item name="colorSurface">@color/night_blue_color</item>
        <item name="colorOnSurface">@color/light_state_gray_color</item>
        <item name="colorPrimarySurface">@color/dark_state_blue_color</item>
        <item name="colorOnPrimarySurface">@color/white_color</item>
        <item name="colorError">@color/magenta_color</item>
        <item name="android:colorBackground">@color/black_color</item>

        <!-- AlertDialog -->
        <item name="alertDialogTheme">@style/ThemeOverlay.MaterialComponents.Dialog.Alert.Xsolla</item>
        <item name="textColorAlertDialogListItem">@color/light_state_gray_color</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogPositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogNegativeButton</item>

        <!-- Snackbar -->
        <item name="snackbarStyle">@style/SnackbarTheme</item>
        <item name="snackbarTextViewStyle">@style/SnackbarTextViewTheme</item>

        <item name="textInputStyle">@style/Widget.Xsolla.TextInputLayout</item>

        <!-- Typography -->
        <item name="textAppearanceButton">@style/ButtonText</item>
        <item name="textAppearanceHeadline1">@style/Headline1</item>
        <item name="textAppearanceHeadline2">@style/Headline2</item>
        <item name="textAppearanceHeadline3">@style/Headline3</item>
        <item name="textAppearanceSubtitle1">@style/Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/Subtitle2</item>
        <item name="textAppearanceBody1">@style/Body1</item>
        <item name="textAppearanceBody2">@style/Body2</item>
        <item name="textAppearanceCaption">@style/AdditionalText</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
