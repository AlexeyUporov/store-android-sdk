<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Xsolla.Drawer" parent="">
        <item name="android:background">@color/drawer_bg</item>
        <item name="android:maxWidth">@dimen/drawer_width</item>
    </style>


    <style name="Widget.Xsolla.Drawer.Icon" parent="">
        <item name="android:layout_marginStart">@dimen/drawer_margin_horizontal</item>
    </style>

    <style name="Widget.Xsolla.Drawer.Icon.Profile" parent="Widget.Xsolla.Drawer.Icon">
        <item name="android:layout_marginTop">@dimen/drawer_margin_top</item>
    </style>

    <style name="Widget.Xsolla.Drawer.Icon.Cart" parent="Widget.Xsolla.Drawer.Icon">
        <item name="android:layout_marginTop">@dimen/drawer_margin_line_vertical</item>
    </style>

    <style name="Widget.Xsolla.Drawer.Icon.CartCounter" parent="">
        <item name="android:layout_marginStart">@dimen/drawer_margin_cart_between_horizontal</item>
    </style>


    <style name="Widget.Xsolla.Drawer.Text" parent="">
        <item name="android:textSize">@dimen/drawer_text_size</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Widget.Xsolla.Drawer.Text.Email" parent="Widget.Xsolla.Drawer.Text">
        <item name="android:layout_marginStart">@dimen/drawer_margin_profile_between_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/drawer_margin_horizontal</item>
        <item name="android:textColor">@color/secondary_color</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.Xsolla.Drawer.Text.Main" parent="Widget.Xsolla.Drawer.Text">
        <item name="android:layout_marginStart">@dimen/drawer_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/drawer_margin_horizontal</item>
    </style>

    <style name="Widget.Xsolla.Drawer.Text.Username" parent="Widget.Xsolla.Drawer.Text.Main">
        <item name="android:layout_marginTop">@dimen/drawer_margin_username_top</item>
        <item name="android:textColor">@color/secondary_color</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.Xsolla.Drawer.Text.Item" parent="Widget.Xsolla.Drawer.Text.Main">
        <item name="android:layout_marginTop">@dimen/drawer_margin_between_vertical</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Widget.Xsolla.Drawer.Text.Store" parent="Widget.Xsolla.Drawer.Text.Main">
        <item name="android:layout_marginTop">@dimen/drawer_margin_line_vertical</item>
        <item name="android:textColor">@color/secondary_color</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.Xsolla.Drawer.Text.Cart" parent="Widget.Xsolla.Drawer.Text">
        <item name="android:layout_marginStart">@dimen/drawer_margin_cart_between_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/drawer_margin_horizontal</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Widget.Xsolla.Drawer.Text.Logout" parent="Widget.Xsolla.Drawer.Text.Main">
        <item name="android:layout_marginTop">@dimen/drawer_margin_logout_top</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Widget.Xsolla.Drawer.Text.CartCounter" parent="Widget.Xsolla.Drawer.Text">
        <item name="android:textSize">@dimen/drawer_cart_counter_text_size</item>
        <item name="android:textColor">@color/white_color</item>
    </style>


    <style name="Widget.Xsolla.Drawer.View.Line" parent="">
        <item name="android:layout_marginStart">@dimen/drawer_margin_line_left</item>
        <item name="android:layout_marginTop">@dimen/drawer_margin_line_vertical</item>
        <item name="android:background">@color/secondary_color</item>
        <item name="android:alpha">0.5</item>
        <item name="android:layout_width">@dimen/drawer_line_width</item>
        <item name="android:layout_height">@dimen/drawer_line_height</item>
    </style>

</resources>