<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Xsolla.SocialButton.Big" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:minHeight">@dimen/social_button_big_height</item>
        <item name="strokeColor">@color/magneta_color</item>
        <item name="strokeWidth">@dimen/input_stroke_width</item>
        <item name="cornerRadius">@dimen/input_corner_radius</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="fontFamily">@font/brutal_type_bold</item>
        <item name="iconGravity">textStart</item>
        <item name="iconEndPadding">@dimen/social_button_big_icon_end_padding</item>
        <item name="iconTint">@color/white_color</item>
    </style>

    <style name="Widget.Xsolla.SocialButton.Google.Big" parent="Widget.Xsolla.SocialButton.Big">
        <item name="icon">@drawable/ic_google</item>
        <item name="android:text">@string/log_in_with_google_button</item>
    </style>

    <style name="Widget.Xsolla.SocialButton.Facebook.Big" parent="Widget.Xsolla.SocialButton.Big">
        <item name="icon">@drawable/ic_facebook</item>
        <item name="android:text">@string/log_in_with_facebook_button</item>
    </style>

    <style name="Widget.Xsolla.SocialButton.Small" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:minWidth">@dimen/social_button_small_width</item>
        <item name="android:minHeight">@dimen/social_button_small_height</item>
        <item name="strokeWidth">@dimen/input_stroke_width</item>
        <item name="strokeColor">@color/secondary_color_20</item>
        <item name="cornerRadius">@dimen/input_corner_radius</item>
        <item name="iconTint">@color/secondary_color</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">@dimen/social_button_small_left_padding</item>
        <item name="android:paddingRight">@dimen/social_button_small_right_padding</item>
    </style>

    <style name="Widget.Xsolla.SocialButton.Google.Small" parent="Widget.Xsolla.SocialButton.Small">
        <item name="icon">@drawable/ic_google</item>
    </style>

    <style name="Widget.Xsolla.SocialButton.Facebook.Small" parent="Widget.Xsolla.SocialButton.Small">
        <item name="icon">@drawable/ic_facebook</item>
    </style>

    <style name="Widget.Xsolla.SocialButton.Twitter.Small" parent="Widget.Xsolla.SocialButton.Small">
        <item name="icon">@drawable/ic_twitter</item>
    </style>

    <style name="Widget.Xsolla.SocialButton.LinkedIn.Small" parent="Widget.Xsolla.SocialButton.Small">
        <item name="icon">@drawable/ic_linkedin</item>
    </style>

    <style name="Widget.Xsolla.SocialButton.Naver.Small" parent="Widget.Xsolla.SocialButton.Small">
        <item name="icon">@drawable/ic_naver</item>
    </style>

</resources>